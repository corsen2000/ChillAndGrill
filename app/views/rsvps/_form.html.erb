<%= form_for [@event, @rsvp] do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :status %>
		<%= f.select :status, [['Yes', 1], ['No', 2], ['Maybe', 3]] %>
	</div>
	<div class="field">
		<%= f.label :comment %> <br>
		<%= f.text_area :comment %>
	</div>
	<div class="actions">
		<%= f.submit 'RSVP' %>
	</div>
<% end %>