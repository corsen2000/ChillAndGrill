<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">    
    <%= f.check_box :private, :disabled => !@event.is_private? && !@event.new_record? %>
    <%= f.label :private, {:class => "checkbox_label"} %>
  </div>

  <div id="user_selection_container" class="field_group hidden">
    <label>Invited Users</label>
    <% User.all.each do |user| %>
      <div class="field">
        <%= user_select_checkbox @event, user %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :start %>
    <%= f.datetime_select :start, :ampm => true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
