<p>
  <b>Title:</b>
  <%= @event.title %>
</p>

<p>
  <b>Description:</b>
  <%= @event.description %>
</p>

<p>
  <b>Start:</b>
  <%= format_date_time @event.start %>
</p>

<h2>Attending This Event</h2>
<div class="users_list">
  <% @event.users.sort_by {|u| u.first_name}.each do |user| %>
    <div class="attending_user">
      <%= user.first_name %>
      <%= get_view_rsvp_link(user, @event) %>
    </div>
  <% end %>
</div>

<div>
  <% unless @rsvp %>
    <%= link_to 'RSVP', new_event_rsvp_path(@event) %>
  <% end %>
</div>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
